<Window x:Class="SysGlance.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="320" Height="200"
        Topmost="True"
        ShowInTaskbar="False">

    <!-- Dark card. -->
    <Border Background="#1E1E1E" CornerRadius="16">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="0"
                              Opacity="0.5" Color="Black" />
        </Border.Effect>

        <Grid Margin="24,20,24,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Logo -->
            <Image Grid.Row="0" Source="logo.png"
                   Stretch="Uniform" MaxHeight="90"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   RenderOptions.BitmapScalingMode="HighQuality" />

            <!-- App name -->
            <TextBlock Grid.Row="1" Text="SysGlance"
                       FontSize="16" FontWeight="SemiBold"
                       Foreground="#CCCCCC"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,10" />

            <!-- Loading bar -->
            <Border Grid.Row="2" Height="4" CornerRadius="2"
                    Background="#333333" ClipToBounds="True">
                <Border x:Name="LoadingBar" Height="4" CornerRadius="2"
                        Background="#4389C7"
                        HorizontalAlignment="Left" Width="0" />
            </Border>
        </Grid>
    </Border>
</Window>
