<Window x:Class="SysGlance.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cp="clr-namespace:ColorPicker;assembly=ColorPicker"
        Title="SysGlance Settings"
        Width="340" Height="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ColorPicker;component/Styles/DefaultColorPickerStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

        <!-- Button style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#333333" />
            <Setter Property="Foreground" Value="#CCCCCC" />
            <Setter Property="BorderBrush" Value="#555555" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="6,3" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#444444" />
                                <Setter TargetName="border" Property="BorderBrush" Value="#666666" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#555555" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CheckBox style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#CCCCCC" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border x:Name="checkBorder"
                                    Width="16" Height="16"
                                    Background="#2A2A2A"
                                    BorderBrush="#666666"
                                    BorderThickness="1"
                                    CornerRadius="2"
                                    VerticalAlignment="Center">
                                <Path x:Name="checkMark"
                                      Data="M 2,5 L 5.5,9 L 11,2"
                                      Stroke="#4389C7"
                                      StrokeThickness="2"
                                      Visibility="Collapsed"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="1" />
                            </Border>
                            <ContentPresenter Margin="6,0,0,0"
                                              VerticalAlignment="Center" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible" />
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="#4389C7" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="checkBorder" Property="Background" Value="#333333" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- RadioButton style -->
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="#CCCCCC" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Margin" Value="0,2" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border x:Name="radioBorder"
                                    Width="16" Height="16"
                                    Background="#2A2A2A"
                                    BorderBrush="#666666"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    VerticalAlignment="Center">
                                <Ellipse x:Name="radioDot"
                                         Width="8" Height="8"
                                         Fill="#4389C7"
                                         Visibility="Collapsed"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center" />
                            </Border>
                            <ContentPresenter Margin="6,0,0,0"
                                              VerticalAlignment="Center" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="radioDot" Property="Visibility" Value="Visible" />
                                <Setter TargetName="radioBorder" Property="BorderBrush" Value="#4389C7" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="radioBorder" Property="Background" Value="#333333" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ScrollBar style -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Width" Value="8" />
        </Style>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Outer card -->
    <Border Background="#1E1E1E" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0"
                              Opacity="0.4" Color="Black" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Title bar -->
            <Border Grid.Row="0" Background="#252525" CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="16,10,8,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="SysGlance Settings"
                               Foreground="#4389C7" FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" />

                    <!-- Close button -->
                    <Border x:Name="CloseButton" Grid.Column="1"
                            Width="28" Height="28" CornerRadius="6"
                            Background="Transparent" Cursor="Hand"
                            MouseLeftButtonDown="CloseButton_Click"
                            MouseEnter="CloseButton_MouseEnter"
                            MouseLeave="CloseButton_MouseLeave">
                        <Path Data="M 0,0 L 8,8 M 8,0 L 0,8"
                              Stroke="#888888" StrokeThickness="1.5"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center" />
                    </Border>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="16,8,16,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Ko-fi support -->
                <Border Grid.Row="0" Background="#2A2A2A" CornerRadius="6"
                        Padding="10,6" Margin="0,0,0,8" Cursor="Hand"
                        x:Name="KofiButton"
                        MouseLeftButtonDown="KofiButton_Click"
                        MouseEnter="KofiButton_MouseEnter"
                        MouseLeave="KofiButton_MouseLeave">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <TextBlock Text="&#x2764;" Foreground="#FF5E5B"
                                   FontSize="13" VerticalAlignment="Center"
                                   Margin="0,0,6,0" />
                        <TextBlock Text="Buy me a Coffee" Foreground="#CCCCCC"
                                   FontSize="12" FontWeight="SemiBold"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!-- Display header -->
                <TextBlock Grid.Row="1" Text="Display" Foreground="#CCCCCC" FontSize="14"
                           FontWeight="SemiBold" Margin="0,0,0,4" />

                <!-- Metric list -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Hidden"
                              Margin="0,0,0,6">
                    <StackPanel x:Name="MetricListPanel" />
                </ScrollViewer>

                <!-- Label color -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,4,0,0"
                            VerticalAlignment="Center">
                    <TextBlock Text="Label Color" Foreground="#CCCCCC" FontSize="13"
                               VerticalAlignment="Center" Margin="0,0,8,0" />
                    <cp:PortableColorPicker x:Name="LabelColorPicker"
                                            Width="24" Height="24"
                                            ShowAlpha="False"
                                            ToolTip="Click to change label color" />
                </StackPanel>

                <!-- Startup toggle -->
                <CheckBox x:Name="StartupCheckBox" Grid.Row="4"
                          Content="Start with Windows"
                          Foreground="#CCCCCC" Margin="0,8,0,0" />

                <!-- Hide overlay toggle -->
                <CheckBox x:Name="HideOverlayCheckBox" Grid.Row="5"
                          Content="Hide Taskbar Overlay"
                          Foreground="#CCCCCC" Margin="0,6,0,0" />

                <!-- Xeneon Edge section -->
                <StackPanel Grid.Row="6" Margin="0,10,0,0">
                    <TextBlock Text="Xeneon Edge" Foreground="#CCCCCC" FontSize="14"
                               FontWeight="SemiBold" Margin="0,0,0,4" />
                    <CheckBox x:Name="WebServerCheckBox"
                              Content="Enable Web Server"
                              Foreground="#CCCCCC" />
                </StackPanel>

                <!-- Web server details (conditionally visible) -->
                <StackPanel x:Name="WebServerDetailsPanel" Grid.Row="7"
                            Margin="0,6,0,0" Visibility="Collapsed">
                    <!-- Port input -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="Port" Foreground="#AAAAAA" FontSize="12"
                                   VerticalAlignment="Center" Margin="0,0,8,0" />
                        <TextBox x:Name="PortTextBox" Width="70" Height="24"
                                 Background="#2A2A2A" Foreground="#CCCCCC"
                                 BorderBrush="#555555" BorderThickness="1"
                                 FontSize="12" Padding="4,2"
                                 MaxLength="5" />
                    </StackPanel>

                    <!-- Iframe code -->
                    <TextBlock Text="Paste in iCUE widget:" Foreground="#AAAAAA"
                               FontSize="11" Margin="0,0,0,4" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="IframeCodeTextBox" Grid.Column="0"
                                 IsReadOnly="True" Background="#2A2A2A"
                                 Foreground="#888888" BorderBrush="#555555"
                                 BorderThickness="1" FontSize="10"
                                 Padding="4,3" />
                        <Button x:Name="CopyIframeButton" Grid.Column="1"
                                Content="Copy" Margin="4,0,0,0"
                                FontSize="11" Padding="8,3" />
                    </Grid>

                    <!-- Dashboard colors -->
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0"
                                VerticalAlignment="Center">
                        <TextBlock Text="Background" Foreground="#CCCCCC" FontSize="12"
                                   VerticalAlignment="Center" Margin="0,0,8,0" />
                        <cp:PortableColorPicker x:Name="DashBgPicker"
                                                Width="24" Height="24"
                                                ShowAlpha="False"
                                                ToolTip="Dashboard background color" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0"
                                VerticalAlignment="Center">
                        <TextBlock Text="Card Color" Foreground="#CCCCCC" FontSize="12"
                                   VerticalAlignment="Center" Margin="0,0,8,0" />
                        <cp:PortableColorPicker x:Name="DashCardPicker"
                                                Width="24" Height="24"
                                                ShowAlpha="False"
                                                ToolTip="Dashboard card color" />
                    </StackPanel>
                </StackPanel>

                <!-- Position and monitor selection -->
                <Grid Grid.Row="8" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Position radios -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Position" Foreground="#CCCCCC" FontSize="14"
                                   FontWeight="SemiBold" Margin="0,0,0,4" />
                        <RadioButton x:Name="PositionLeftRadio" Content="Left"
                                     Foreground="#CCCCCC" GroupName="Position" />
                        <RadioButton x:Name="PositionCenterRadio" Content="Center"
                                     Foreground="#CCCCCC" GroupName="Position" />
                        <RadioButton x:Name="PositionRightRadio" Content="Right"
                                     Foreground="#CCCCCC" GroupName="Position" />
                    </StackPanel>

                    <!-- Monitor radios -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Monitor" Foreground="#CCCCCC" FontSize="14"
                                   FontWeight="SemiBold" Margin="0,0,0,4" />
                        <RadioButton x:Name="MonitorPrimaryRadio" Content="Primary"
                                     Foreground="#CCCCCC" GroupName="Monitor" />
                        <RadioButton x:Name="MonitorSecondaryRadio" Content="Secondary"
                                     Foreground="#CCCCCC" GroupName="Monitor" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
